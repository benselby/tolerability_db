extends layout

block content
    h1 #{title}

    form(method='POST' action='')
        div.form-group
            label(for='name') Study:
            input#name.form-control(type='text' name='name' value=(undefined===study ? '' : study.name))
        button.btn.btn-primary(type='submit') Submit

    if errors 
        ul
            for error in errors
                li != error.msg
